/**app.wxss**/
.root{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: auto
}
.loading-icon{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50rpx,-50rpx)
}
.loading-icon image{
  width: 50px;
  height: 50px;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
