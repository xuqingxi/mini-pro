.swiper-section{
  margin: 0 20rpx
}
.book-wrap .book{
  width: 100px;
  height: 120px;
}
.swiper-section image{
  width: 100%;
  height:100%
}
.txt{
  width: 70%;
  margin: 0 0 0 10px
}
.content{
  margin-top: 10px;
  margin-left: 10px;
  font-size: 14px;
  font-weight: bold;
  border-left: 1px solid #000;
  height: 20px;
  line-height: 20px;
  padding-left: 5px
}
.book-wrap{
  margin: 10px 10px;
  display: flex;
  font-size: 24rpx;
  color: #252525;
  position: relative
}
.book-wrap .book-title{
  font-size: 30rpx;
  font-weight: bold
}
.book-desc{
    display: -webkit-box;
    line-height: 40rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
    overflow: hidden;
}
.book-bot{
  position: absolute;
  right: 0;
  bottom: 0;
  width: inherit;
  display: flex;
  justify-content: space-between;
}
.book-bot text{
  margin-right: 5px
}